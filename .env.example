###############################################
# AUTO TWEET BOT FOR X.COM
# Copy this file to .env and fill in your values
###############################################

# ============================================
# TWITTER API CREDENTIALS (REQUIRED)
# ============================================
# Get these from: https://developer.twitter.com
# You need a developer account with elevated access

# API Key (also called Consumer Key)
TWITTER_API_KEY=your_api_key_here_abc123xyz

# API Secret (also called Consumer Secret)
TWITTER_API_SECRET=your_api_secret_here_def456uvw

# Access Token (from user authentication)
TWITTER_ACCESS_TOKEN=your_access_token_here_1234567890-abcdef

# Access Token Secret
TWITTER_ACCESS_SECRET=your_access_secret_here_ghi789rst

# Bearer Token (for API v2, optional but recommended)
TWITTER_BEARER_TOKEN=your_bearer_token_here_AAAABBBBCCCCDDDD

# ============================================
# APPLICATION CONFIGURATION
# ============================================

# How many tweets to post per week
# Recommended: 2-5 to avoid spam
TWEETS_PER_WEEK=2

# Timezone for scheduling
# Use IANA timezone names: https://en.wikipedia.org/wiki/List_of_tz_database_time_zones
TIMEZONE=America/New_York

# Logging level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Maximum tweet length (280 for Twitter/X)
MAX_TWEET_LENGTH=280

# Dry run mode: set to True to test without actually posting
# When True, tweets will be logged but not posted
DRY_RUN=False

# ============================================
# ADVANCED SETTINGS (Optional)
# ============================================

# Retry failed tweets (True/False)
ENABLE_RETRY=True

# Maximum retry attempts
MAX_RETRY_ATTEMPTS=3

# Retry delay in seconds
RETRY_DELAY=60

# Content generation language (en, es, fr, etc.)
CONTENT_LANGUAGE=en

# Enable/disable specific content categories
# Format: crypto,funny,finance,social,sociology
ENABLED_CATEGORIES=crypto,funny,finance,social,sociology

# Post with images (True/False)
# Requires additional setup for image generation/selection
ENABLE_IMAGES=False

# Image directory (if ENABLE_IMAGES=True)
IMAGE_DIRECTORY=./storage/images

# ============================================
# MONITORING & NOTIFICATIONS (Optional)
# ============================================

# Email notifications for errors (True/False)
EMAIL_NOTIFICATIONS=False

# Email address for notifications
ADMIN_EMAIL=admin@example.com

# Discord webhook for notifications (optional)
DISCORD_WEBHOOK_URL=

# Slack webhook for notifications (optional)
SLACK_WEBHOOK_URL=

# ============================================
# SAFETY & COMPLIANCE
# ============================================

# Minimum time between tweets (in hours)
# Prevents posting too frequently
MIN_TIME_BETWEEN_TWEETS=6

# Enable tweet content validation (True/False)
# Checks for inappropriate content
CONTENT_VALIDATION=True

# Safe word list file path
SAFE_WORDS_FILE=./config/safe_words.txt

# Blocked words file path
BLOCKED_WORDS_FILE=./config/blocked_words.txt
